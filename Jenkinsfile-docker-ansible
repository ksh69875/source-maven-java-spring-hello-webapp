pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        git branch: 'main', url: 'https://github.com/ksh69875/source-maven-java-spring-hello-webapp.git'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        sh 'mvn clean package -DskipTests=true'
      }
    }
    stage('Test') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        sh 'mvn test'
      }
    }
    stage('Build Docker Image') {
      agent { label 'controller' }
      steps {
        sh 'docker image build -t myweb:hello-world .'
      }
    }
    stage('Tag Docker Image') {
      agent { label 'controller' }
      steps {
        sh 'docker image tag myweb:hello-world 69875/myweb:$BUILD_NUMBER'
        sh 'docker image tag myweb:hello-world 69875/myweb:latest'
      }
    }
   stage('Publish Docker Image') {
      agent { label 'controller' }
      steps {
        withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1/') {
          sh 'docker image push 69875/myweb:$BUILD_NUMBER'
          sh 'docker image push 69875/myweb:latest'
        }
      }
    }
    stage('Run Docker Container') {
      agent { label 'controller' }
      steps {
        ansiblePlaybook(playbook: 'docker-container-deploy.yml')
      }
    }
  }
}
