pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent any
      steps {
        git branch: 'main', url: 'https://github.com/ksh69875/source-maven-java-spring-hello-webapp.git'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        sh 'mvn clean package -DskipTests=true'
      }
    }
    stage('Test') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        sh 'mvn test'
      }
    }
    stage('Build Docker Image') {
      agent any
      steps {
        sh 'docker image bulid -t webapp:hello-world .'
      }
    }
    stage('Tag Docker Image') {
      agent any
      steps {
        sh 'docker image tag webapp:hello-world 69875/webapp:$BUILDNUMBER'
        sh 'docker image tag webapp:hello-world 69875/webapp:latest'
      }
    }
    stage('Publish Docker Image') {
      agent any
      steps {
        withDockerRegistry(credentialsId: 'docker-hub-tokien', url: 'https://index.docker.io/v1/') {
          sh 'docker image push 69875/webapp:$BUILD_NUMBER'
          sh 'docker image push 69875/webapp:$latest'
        }
      }
    }
    stage('Run Docker Container') {
      agent {
        docker { image 'docker:dind' }
      }
      steps {
        sh 'docker -H tcp://192.168.56.103:2375 container run --detach --name webapp -p 80:8080 69875/webapp:$BUILD_NUMBER'
      }
    }
  }
}

